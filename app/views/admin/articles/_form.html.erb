<%= form_for [:admin, @article], html: { class: "form form-horizontal" } do |f| %>
  <div class="form-group">
    <label class="control-label">Title:</label>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <label class="control-label">Category:</label>
    <%= f.select :category, Article.hash_category, {:include_blank => false}, class: "form-control" %>
  </div>

  <div class="form-group">
    <label class="control-label">内容（富文本编辑器）:</label>
    <%= f.text_area :body, size: "80x20", id: "knwoledge_body", class: "form-control" %>
  </div>

  <input type="hidden" name="page" value="<%= @per_page %>" />
  <input type="hidden" name="q[name]" value="<%= @q %>" />

  <button type="submit" class="btn btn-default">Submit</button>
<% end %>
